params {
  /*********
  * Inputs *
  *********/
  reference_path = "data/ref/hs38DH.fa"

  /* Use "NO_FILE" to indicate the samples list should be generated from cram_files directory.
     format is: NewID\tOldID\tCramFile\t\CraiFile
  */
  samples_path = "/home/grosscol_umich_edu/data_prep/hacks/198_samples.tsv"

  // Glob of cram and crai files. Alternative to samples file.
  cram_files = "data/crams/*.cram"

  // Path to bcf files.  Assumes corresponding .bcf.csi 
  // Use genotype only bcfs.
  bcfs_path = "/mnt/vcfs/freeze10/filtered_genotypes/minDP0/{chr11,chr12}/*.bcf"

  
  random {
    exec = "RandomHetHom3"
    seed = 10123
    max_hethom = 5
  }

  sequences {
    exec = "Crams2"   
    window = 100
  }

  samtools {
    exec = "samtools"
    
    // Manually change to adjust memory for current use case.  
    max_mem = "14G"
  }
}

// To run on cluster use: 
//    nextflow run Sequences.nf -profile slurm
executor {
  $slurm {
    queueSize = 2000
    time = "14d"
  }
  $local {
    cpus = 3
  }
}

profiles {
  standard {
    process.executor = 'local'
  }

  slurm {
    process {
      executor = 'slurm'
      errorStrategy = 'retry'
      maxRetries = 3
      module = ['vep', 'htslib','samtools', 'bam_util', 'data_prep', 'python3']

      withLabel: anyqueue {
        queue = "bravo,highcpu,highmem"
        memory = "1.5 GB"
        cpus = 2
      }

      withLabel: highmem {
        queue = "highmem"
        memory = "16 GB"
        cpus = 2
      }

      withLabel: highcpu {
        queue = "highcpu"
        memory = "1.5 GB"
        cpus = 2
      }
    }
  }
}
